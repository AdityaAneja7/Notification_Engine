    "/api/client/register": {
      "post": {
        "tags": ["Client"],
        "description": "Add client in the database",
        "parameters": [
          {
            "name": "UserName",
            "in": "body",
            "description": "client name to be added",
            "schema": {
              "$ref": "#/definitions/clientName"
            }
          }
        ],
        "produces": ["application/json"],
        "responses": {}
      }
    },
    "/api/client/token/{secretKey}": {
      "parameters": [
        {
          "name": "secretKey",
          "in": "path",
          "required": true,
          "description": "Secret key of client that we want to find",
          "type": "string"
        }
      ],
      "get": {
        "tags": ["Client"],
        "summary": "create JWT token",
        "responses": {}
      }
    },
    "/api/user/create": {
      "post": {
        "tags": ["Users"],
        "description": "Add Entity in the database",
        "parameters": [
          {
            "name": "Authorization",
            "in": "header",
            "type": "string",
            "description": "auth token"
          },
          {
            "name": "Entity",
            "in": "body",
            "description": "Entity name to be added",
            "schema": {
              "$ref": "#/definitions/createEntity"
            }
          }
        ],
        "produces": ["application/json"],
        "responses": {}
      }
    },
    "/api/user/{Id}": {
      "get": {
        "tags": ["Users"],
        "description": "Search Entity in the database",
        "parameters": [
          {
            "name": "Authorization",
            "in": "header",
            "type": "string",
            "description": "auth token"
          },
          {
            "name": "Id",
            "in": "path",
            "description": "Entity to be searched",
            "schema": {
              "$ref": "#/definitions/searchEntity"
            }
          }
        ],
        "produces": ["application/json"],
        "responses": {}
      }
    },
    "/api/user/update": {
      "post": {
        "tags": ["Users"],
        "description": "Update Entity in the database",
        "parameters": [
          {
            "name": "Authorization",
            "in": "header",
            "type": "string",
            "description": "auth token"
          },
          {
            "name": "Entity",
            "in": "body",
            "description": "Delete Entity",
            "schema": {
              "$ref": "#/definitions/updateEntity"
            }
          }
        ],
        "produces": ["application/json"],
        "responses": {}
      }
    },
    "/api/user/delete/{Id}": {
      "get": {
        "tags": ["Users"],
        "description": "Delete Entity in the database",
        "parameters": [
          {
            "name": "Authorization",
            "in": "header",
            "type": "string",
            "description": "auth token"
          },
          {
            "name": "Id",
            "in": "path",
            "description": "Delete Entity",
            "schema": {
              "$ref": "#/definitions/searchEntity"
            }
          }
        ],
        "produces": ["application/json"],
        "responses": {}
      }
    },
    "/api/client/group/create": {
      "post": {
        "tags": ["Group"],
        "description": "Create a new group",
        "parameters": [
          {
            "name": "Group",
            "in": "body",
            "description": "create Group",
            "schema": {
              "$ref": "#/definitions/createGroup"
            }
          }
        ],
        "produces": ["application/json"],
        "responses": {}
      }
    },
    "/api/client/group/allot": {
      "post": {
        "tags": ["Group"],
        "description": "Allot group to a Entity",
        "parameters": [
          {
            "name": "Authorization",
            "in": "header",
            "type": "string",
            "description": "auth token"
          },
          {
            "name": "Group",
            "in": "body",
            "description": "Allot Group",
            "schema": {
              "$ref": "#/definitions/createGroup"
            }
          }
        ],
        "produces": ["application/json"],
        "responses": {}
      }
    },
    "/api/notification": {
      "post": {
        "tags": ["Notification"],

        "description": "Send Notifications to the entity",

        "parameters": [
          {
            "name": "Authorization",

            "in": "header",

            "type": "string",

            "description": "auth token"
          },

          {
            "name": "Notification",

            "in": "body",

            "description": "Notification type ",

            "schema": {
              "$ref": "#/definitions/sendNotification"
            }
          }
        ],

        "produces": ["application/json"],

        "responses": {}
      }
    }
  },
  "definitions": {

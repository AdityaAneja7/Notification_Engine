{
  "swagger": "2.0",
  "info": {
    "version": "1.0.0",
    "title": "Notification Engine",
    "description": "Notification API list"
  },
  "tags": [
    {
      "name": "Client",
      "description": "API for Client management"
    },
    {
      "name": "Group",
      "description": "API to create and allot Group"
    },
    {
      "name": "Users",
      "description": "API for users Entity management"
    },
    {
      "name": "Notification",

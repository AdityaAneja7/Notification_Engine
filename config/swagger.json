    },
    "createEntity": {
      "properties": {
        "name": {
          "type": "string",
          "uniqueItems": true
        },
        "email": {
          "type": "string",
          "uniqueItems": true
        },
        "phoneNumber": {
          "type": "number",
          "uniqueItems": true
        },
        "deviceId": {
          "type": "number",
          "uniqueItems": true
        }
      }
    },

